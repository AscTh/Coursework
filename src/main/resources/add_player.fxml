            </JFXButton>
        </AnchorPane>
        <JFXTextField fx:id="name" focusColor="WHITE" labelFloat="true" layoutX="130.0" layoutY="84.0" prefHeight="25.0" prefWidth="290.0" promptText="Имя" style="-fx-prompt-text-fill: #52dee5; -fx-text-fill: white;" unFocusColor="#52dee5">
            <font>
                <Font size="14.0" />
            </font>
        </JFXTextField>
        <JFXTextField fx:id="height" focusColor="WHITE" labelFloat="true" layoutX="130.0" layoutY="148.0" prefHeight="25.0" prefWidth="100.0" promptText="Рост" style="-fx-prompt-text-fill: #52dee5; -fx-text-fill: white;" unFocusColor="#52dee5">
            <font>
                <Font size="14.0" />
            </font>
        </JFXTextField>
        <JFXTextField fx:id="weight" focusColor="WHITE" labelFloat="true" layoutX="320.0" layoutY="148.0" prefHeight="25.0" prefWidth="100.0" promptText="Вес" style="-fx-prompt-text-fill: #52dee5; -fx-text-fill: white;" unFocusColor="#52dee5">
            <font>
                <Font size="14.0" />
            </font>
        </JFXTextField>
        <JFXTextField fx:id="numder" focusColor="WHITE" labelFloat="true" layoutX="130.0" layoutY="212.0" prefHeight="25.0" prefWidth="100.0" promptText="Номер" style="-fx-prompt-text-fill: #52dee5; -fx-text-fill: white;" unFocusColor="#52dee5">
            <font>
                <Font size="14.0" />
            </font>
        </JFXTextField>
        <JFXTextField fx:id="role" focusColor="WHITE" labelFloat="true" layoutX="320.0" layoutY="212.0" prefHeight="25.0" prefWidth="100.0" promptText="Позиция" style="-fx-prompt-text-fill: #52dee5; -fx-text-fill: white;" unFocusColor="#52dee5">
            <font>
                <Font size="14.0" />
            </font>
        </JFXTextField>
      <JFXTextField fx:id="name_team" focusColor="WHITE" labelFloat="true" layoutX="130.0" layoutY="265.0" prefHeight="25.0" prefWidth="290.0" promptText="Команда" style="-fx-prompt-text-fill: #52dee5; -fx-text-fill: white;" unFocusColor="#52dee5">
         <font>
            <Font size="14.0" />
         </font>
      </JFXTextField>
        <HBox alignment="CENTER" layoutX="73.0" layoutY="339.0" prefHeight="37.0" prefWidth="404.0" spacing="50.0">
            <JFXButton fx:id="saveButton" onAction="#addMember" prefHeight="37.0" prefWidth="100.0" style="-fx-background-color: #f44336;" text="Сохранить" textFill="WHITE">
                <font>
                    <Font size="14.0" />
                </font>
            </JFXButton>
            <JFXButton fx:id="cancelButton" layoutX="10.0" layoutY="10.0" onAction="#cancel" prefHeight="37.0" prefWidth="100.0" style="-fx-background-color: #f44336;" text="Отмена" textFill="WHITE">
                <font>
                    <Font size="14.0" />
                </font>
            </JFXButton>
        </HBox>
    </AnchorPane>
</StackPane>
