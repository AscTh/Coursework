<StackPane fx:id="rootPane" stylesheets="@tabpane.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Player.AddPlayer">
    <AnchorPane id="AnchorPane" fx:id="mainContainer" prefHeight="434.0" prefWidth="550.0" styleClass="custom-pane" stylesheets="@tabpane.css">
